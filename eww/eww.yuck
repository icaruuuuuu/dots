(defpoll time	:interval "5s"
		:initial "TIME"
		`date "+%H:%M"`
)

(defwidget wrapper [text]
	(box 	:orientation "horizontal"
		:halign "center"
		:class "wrapper"
		text
	)
)

(defwindow taskbar
	:monitor 0
	:stacking "fg"
	:exclusive true
	:geometry (geometry :x "0%"
		:y "0%"
		:width "100%"
		:height: "5%"
		:anchor "top center"
	)
	(wrapper :text time)	
)
